# Django
DJANGO_SECRET_KEY=change-me
DJANGO_SETTINGS_MODULE=config.settings.dev
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Auto-created superuser (set in Railway backend service env vars)
DJANGO_ADMIN_EMAIL=admin@example.com
DJANGO_ADMIN_PASSWORD=change-me-strong-password

# Database (dev uses SQLite by default)
DATABASE_URL=sqlite:///db.sqlite3

# Redis / Celery
REDIS_URL=redis://localhost:6379/0

# Railway Object Storage — auto-injected by Railway when a bucket is provisioned
# (leave blank in dev — uses local filesystem)
RAILWAY_BUCKET_ACCESS_KEY_ID=
RAILWAY_BUCKET_SECRET_ACCESS_KEY=
RAILWAY_BUCKET_NAME=
RAILWAY_BUCKET_REGION=auto
RAILWAY_BUCKET_ENDPOINT_URL=

# AI provider — set to "claude" or "openai"
AI_PROVIDER=claude

# Anthropic (used when AI_PROVIDER=claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-6

# OpenAI (used when AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Stripe per-upload pricing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_UPLOAD_PRICE_USD=2.00
STRIPE_CURRENCY=usd

# CORS / CSRF (prod — set to your Railway frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend.up.railway.app
CSRF_TRUSTED_ORIGINS=https://your-backend.up.railway.app

# Frontend env vars (set on the Railway frontend service; baked in at build time)
VITE_API_BASE_URL=https://your-backend.up.railway.app/api/v1
VITE_STRIPE_PUBLISHABLE_KEY=
